<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/alcin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Алкины"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alcin_sved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Ациклические углеводороды, содержащие в молекуле помимо одинарных связей, одну тройную связь между атомами углерода. Атомы углерода при тройной связи находятся в состоянии sp-гибридизации."
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_below="@id/alcin"/>

            <TextView
                android:id="@+id/alcin_form_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Общая формула"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/alcin_sved"/>

            <TextView
                android:id="@+id/alcin_form1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CnH2n-2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:gravity="center"
                android:layout_below="@id/alcin_form_info"/>

            <TextView
                android:id="@+id/alcin_phys_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Физические свойства"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/alcin_form1"/>

            <TextView
                android:id="@+id/alcin_phys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Алкины по своим физическим свойствам напоминают соответствующие алкены. Низшие (до С4) — газы без цвета и запаха, имеющие более высокие температуры кипения, чем аналоги в алкенах. Алкины плохо растворимы в воде, лучше — в органических растворителях."
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_below="@id/alcin_phys_info"/>

            <TextView
                android:id="@+id/alcin_chem_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Химические свойства"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/alcin_phys"/>

            <TextView
                android:id="@+id/alcin_chem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_below="@id/alcin_chem_info"/>

            <TextView
                android:id="@+id/alcin_pol_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Получение"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/alcin_chem"/>

            <TextView
                android:id="@+id/alcin_pol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_below="@id/alcin_pol_info" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>