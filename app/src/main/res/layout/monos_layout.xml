<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/monos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Моносахариды"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="45dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/monos_sved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Моносахариды -  органические соединения, одна из основных групп углеводов; самая простая форма сахара.
\nОни являются стандартными блоками, из которых синтезируются дисахариды, олигосахариды и полисахариды"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_below="@id/monos"/>

            <TextView
                android:id="@+id/monos_phys_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Физические свойства"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/monos_sved"/>

            <TextView
                android:id="@+id/monos_phys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Моносахариды – бесцветные твёрдые кристаллические вещества, легко растворяются в воде, гигроскопичны, сладкие на вкус, не летучи, адсорбируют запахи. Растворы моносахаридов оптически активны, для них характерно явление мутаротации (изменение угла вращения свежеприготовленного раствора моносахарида)."
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_below="@id/monos_phys_info"/>

            <TextView
                android:id="@+id/monos_chem_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Химические свойства"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/monos_phys"/>

            <TextView
                android:id="@+id/monos_chem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:layout_below="@id/monos_chem_info"/>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>